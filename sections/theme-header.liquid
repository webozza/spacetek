<!-- /sections/theme-header.liquid -->
{%- include 'amp-detector' -%}
{%- unless googleamp -%}
  {%- include 'theme-header' -%}
{%- else -%}
  {%- include 'amp-theme-header' -%}
{%- endunless -%}
{% schema %}
{
  "name": "Header",
  "max_blocks": 30,
  "settings": [
    {
      "type": "header",
      "content": "Logo Shop"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "image_picker",
      "id": "logo_mobile",
      "label": "Mobile logo image"
    },
	{
      "type": "header",
      "content": "Social Icons"
    },
	{
      "type": "checkbox",
      "id": "social_active",
      "label": "Enable Social icons",
      "default": true,
	  "info":"Go to Theme settings > Social media to control the social icons and link."
    },	
    {
      "type": "header",
      "content": "Menu Setting"
    },
    {
      "type": "link_list",
      "id": "navigation",
      "label": "Top Navigation"
    },
    {
      "type": "link_list",
      "id": "link_list",
      "label": "Main Menu"
    },
    {
      "type": "checkbox",
      "id": "header_sticky",
      "label": "Enable sticky header",
      "default": true
    }
  ],
  "blocks": [
    {
      "name": "Sub Menu Setting",
      "type": "sub_menu_setting",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Target",
          "info": "The name of a menu in the first level of main menu"
        },
        {
          "type": "select",
          "id": "row",
          "label": "Number of column",
          "options": [
            {
              "value": "1",
              "label": "1"
            },
            {
              "value": "2",
              "label": "2"
            },
            {
              "value": "3",
              "label": "3"
            },
            {
              "value": "4",
              "label": "4"
            },
            {
              "value": "5",
              "label": "5"
            },
            {
              "value": "6",
              "label": "6"
            }
          ],
          "default": "1"
        },
        {
          "type": "image_picker",
          "id": "bg",
          "label": "Background"
        },
        {
          "type": "number",
          "id": "bg_width",
          "label": "Background width (px)",
          "default": 500
        },
        {
          "type": "number",
          "id": "bg_height",
          "label": "Background height (px)",
          "default": 500
        }
      ]
    },
    {
      "name": "Sub Menu Content",
      "type": "sub_menu_content",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Target",
          "info": "The name of a menu in the first level of main menu"
        },
        {
          "type": "link_list",
          "id": "link_list",
          "label": "Menu Links 1 Column"
        },
        {
          "type": "link_list",
          "id": "link_list_col",
          "label": "Menu Links Multi Columns"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "article",
          "id": "article",
          "label": "Article"
        },
        {
          "type": "html",
          "id": "html",
          "label": "HTML Block"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "image_link",
          "label": "Image Link"
        }
      ]
    }
  ]
}
{% endschema %}