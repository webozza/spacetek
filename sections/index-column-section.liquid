<!-- Welcome section starts -->
<section class="custom-content">
<div class="grid-container">
	<div class="one-fourth-column">
		<div class="custom-cont-one">
		{% if section.settings.section-heading != blank %}
		<h2 class="section-heading">{{ section.settings.section-heading }}</h2>
		{% endif %}
		<div class="custom-content-btn">
			{% if section.settings.view-btn != blank %}
			<button class="view-btn">
			<a href="{{ section.settings.view-btn-link }}">{{ section.settings.view-btn }}</a>
			</button>
			{% endif %}
		</div>
		</div>
	</div>
	<div class="one-fourth-column">
		{% if section.settings.sign != '' %}          
			<div class="sign"><img src="{% if section.settings.sign %}{{ section.settings.sign | img_url: 'master' }}{% else %}{{ '335x135.png' | asset_url }}{% endif %}" alt="{{ section.settings.sign.alt }}" /></div>          
		{% endif %}
		{% if section.settings.action != '' %}<div class="action"><a href="{{ section.settings.actionurl }}">{{ section.settings.action }}</a></div>{% endif %}
	</div>
	<div class="one-fourth-column">
        {% if section.settings.sign2 != '' %}          
			<div class="sign2"><img src="{% if section.settings.sign2 %}{{ section.settings.sign2 | img_url: 'master' }}{% else %}{{ '335x135.png' | asset_url }}{% endif %}" alt="{{ section.settings.sign2.alt }}" /></div>          
		{% endif %}
		{% if section.settings.action != '' %}<div class="action"><a href="{{ section.settings.actionurl }}">{{ section.settings.action }}</a></div>{% endif %}
    </div>
	<div class="one-fourth-column-last">
      <div class="custom-cont-two">
		{% if section.settings.section-heading2 != blank %}
		<h2 class="section-heading2">{{ section.settings.section-heading2 }}</h2>
		{% endif %}
		<div class="custom-content-btn2">
			{% if section.settings.view-btn2 != blank %}
			<button class="view-btn2">
			<a href="{{ section.settings.view-btn-link2 }}">{{ section.settings.view-btn2 }}</a>
			</button>
			{% endif %}
		</div>
		</div>
    </div>
	<br style="clear:both;" />
</div>
</section>
<!-- Welcome section ends -->
{% schema %}
{
"name": "Custom Content Section", // Section name
"settings": [
{
"id": "section-heading",
"type": "text",
"label": "Heading"
},
{
"id": "view-btn",
"type": "text",
"label": "Button name"
},
{
"id": "view-btn-link",
"type": "url",
"label": "Button URL"
},
{
  "type": "image_picker",
  "id": "sign",
  "label": "Image"
},
{
"id": "section-heading2",
"type": "text",
"label": "Heading2"
},
{
"id": "view-btn2",
"type": "text",
"label": "Button2 name"
},
{
"id": "view-btn-link2",
"type": "url",
"label": "Button2 URL"
},
{
  "type": "image_picker",
  "id": "sign2",
  "label": "Image2"
}
],
"presets": [
{
"name": "Custom Content Section",
"category": "ADVANCED LAYOUT"
}
]
}
{% endschema %}

