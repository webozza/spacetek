<div class="{{ section.settings.display }}" data-section-id="{{ section.id }}" data-section-type="gallery-section">  
  <div class="box border-none index-gallery-container">
    <div class="box-content">
      {%- if section.blocks.size > 0 -%}
      <div class="index-gallery-grid-list">
        <div class="carousel" data-carousel-param='{"effect": "{{ section.settings.effect }}", "autoplay": "{{ section.settings.autoplay }}", "autoplaySpeed": "{{ section.settings.autoplay_speed }}", "space": "{{ section.settings.space }}", "column_small": "{{ section.settings.column_small }}", "column_medium": "{{ section.settings.column_medium }}", "column_large": "{{ section.settings.column_large }}", "column_xlarge": "{{ section.settings.column_xlarge }}", "column_xxlarge": "{{ section.settings.column_xxlarge }}", "column_xxxlarge": "{{ section.settings.column_xxxlarge }}", "row": "1"}' data-carousel>
          <div class="carousel-wrapper carousel-{{ section.settings.navigation_position }}">
            <div class="swiper-container" data-carousel-container>
              <div class="swiper-wrapper grid-margin-x small-up-{{ section.settings.column_small }} medium-up-{{ section.settings.column_medium }} large-up-{{ section.settings.column_large }} xlarge-up-{{ section.settings.column_xlarge }} xxlarge-up-{{ section.settings.column_xxlarge }} xxxlarge-up-{{ section.settings.column_xxxlarge }}">        
                {%- for block in section.blocks -%}
                <div class="swiper-slide cell" data-carousel-item>
                  {%- unless block.settings.image == blank -%}
                  <a href="{{ block.settings.link }}" class="index-banner-grid-image display-block">
                    <img src="{{ 'icon-loader-clock.svg' | asset_url }}" data-src="{{ block.settings.image | img_url: 'master' }}" class="width-100 lazyload" alt="{{ block.settings.image.alt }}" />
                    <div class="caption">{{ block.settings.title }}</div>
                  </a>
                  {% else %}
                  <a href="{{ block.settings.link }}" class="index-banner-grid-image display-block">
                    <img src="{{ 'icon-loader-clock.svg' | asset_url }}" data-src="{{ '600x600.png' | asset_url }}" class="width-100 lazyload" alt="{{ block.settings.image.alt }}" />
                  </a>
                  {%- endunless -%}
                </div>
                {%- endfor -%}
              </div>
            </div>
            {%- if section.settings.navigation -%}
            <!-- If we need navigation buttons -->
            <div class="carousel-navigation carousel-nav-prev" data-carousel-nav-prev><em class="sli sli-arrow-left"></em></div>
            <div class="carousel-navigation carousel-nav-next" data-carousel-nav-next><em class="sli sli-arrow-right"></em></div>
            {%- endif -%}
          </div>
          {%- if section.settings.pagination -%}
          <!-- If we need pagination -->
          <div class="carousel-pagination" data-carousel-pagination></div>
          {%- endif -%}
		</div>
      </div>
      {%- endif -%}
    </div>
  </div>  
</div>
