<div class="index-slideshow-container {{ section.settings.display }} {{ section.settings.navigation_position }}" data-section-id="{{ section.id }}" data-slideshow-param='{"effect": "{{ section.settings.effect }}", "autoplay": "{{ section.settings.autoplay }}", "autoplaySpeed": "{{ section.settings.autoplay_speed }}", "height": "{{ section.settings.slideshow_height }}", "width": "{{ section.settings.slideshow_width }}"}' data-index-slideshow>
  {%- assign slideshow_size = section.settings.slideshow_width | append: 'x' | append: section.settings.slideshow_height -%}
  {%- if section.blocks.size > 0 -%}
    <div class="swiper-container" data-slideshow-container>
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          {%- if block.type == 'image' -%}
            <div class="swiper-slide" data-slideshow-slide-type="image" data-slideshow-slide>
              {%- if block.settings.link != blank and block.settings.action == blank -%}
                <a class="index-slideshow-link" href="{{ block.settings.link }}"></a>
              {%- endif -%}
              <div class="index-slideshow-background">
                {%- if forloop.first == true -%}
                  {% if block.settings.background %}
                    <img src="{{ block.settings.background | img_url: slideshow_size }}" alt="{{ block.settings.background.alt }}" />
                  {% else %}
                    <img src="{{ '1920x930.png' | asset_url }}" alt="" />
                  {% endif %}
                {%- else -%}
                  {% if block.settings.background %}
                    <img src="{{ 'icon-loader-clock.svg' | asset_url }}" data-src="{{ block.settings.background | img_url: slideshow_size }}" alt="{{ block.settings.background.alt }}" class="swiper-lazy" />
                  {% else %}
                    <img src="{{ 'icon-loader-clock.svg' | asset_url }}" data-src="{{ '1920x930.png' | asset_url }}" alt="" class="swiper-lazy" />
                  {% endif %}
                {%- endif -%}
              </div>
              {%- if block.settings.title != blank -%}
                <div class="index-slideshow-caption index-slideshow-caption-title {{ block.settings.title_style }}">
                  <div class="animated" data-slideshow-caption='{"type": "text", "positionX": "{{ block.settings.title_x }}", "positionY": "{{ block.settings.title_y }}", "zIndex": "{{ block.settings.title_z }}", "align" : "{{ block.settings.title_align }}", "entranceEffect": "{{ block.settings.entrance_effect }}", "exitEffect": "{{ block.settings.exit_effect }}"}'>{{ block.settings.title }}</div>
                </div>
              {%- endif -%}
              {%- if block.settings.description != blank -%}
                <div class="index-slideshow-caption index-slideshow-caption-description {{ block.settings.description_style }}">
                  <div class="animated" data-slideshow-caption='{"type": "text", "positionX": "{{ block.settings.description_x }}", "positionY": "{{ block.settings.description_y }}", "zIndex": "{{ block.settings.description_z }}", "align" : "{{ block.settings.description_align }}", "entranceEffect": "{{ block.settings.entrance_effect }}", "exitEffect": "{{ block.settings.exit_effect }}"}'>{{ block.settings.description }}</div>
                </div>
              {%- endif -%}
              {%- if block.settings.action != blank -%}
                <div class="index-slideshow-caption index-slideshow-caption-action {{ block.settings.action_style }}">
                  <a href="{{ block.settings.link }}" class="flex-container align-middle animated" data-slideshow-caption='{"type": "text", "positionX": "{{ block.settings.action_x }}", "positionY": "{{ block.settings.action_y }}", "zIndex": "{{ block.settings.action_z }}", "align" : "{{ block.settings.action_align }}", "entranceEffect": "{{ block.settings.entrance_effect }}", "exitEffect": "{{ block.settings.exit_effect }}"}'>
                    {{ block.settings.action }}
                  </a>
                </div>
              {%- endif -%}
              {%- if block.settings.caption_1 != blank -%}
                <div class="index-slideshow-caption index-slideshow-caption-image">
                  <img src="{{ block.settings.caption_1 | img_url: 'master' }}" alt="{{ block.settings.caption_1.alt }}" class="animated" data-slideshow-caption='{"type": "image", "positionX": "{{ block.settings.caption_1_x }}", "positionY": "{{ block.settings.caption_1_y }}", "zIndex": "{{ block.settings.caption_1_z }}", "align" : "{{ block.settings.caption_1_align }}", "entranceEffect": "{{ block.settings.entrance_effect }}", "exitEffect": "{{ block.settings.exit_effect }}"}'/>
                </div>
              {%- endif -%}
              {%- if block.settings.caption_2 != blank -%}
                <div class="index-slideshow-caption index-slideshow-caption-image">
                  <img src="{{ block.settings.caption_2 | img_url: 'master' }}" alt="{{ block.settings.caption_2.alt }}" class="animated" data-slideshow-caption='{"type": "image", "positionX": "{{ block.settings.caption_2_x }}", "positionY": "{{ block.settings.caption_2_y }}", "zIndex": "{{ block.settings.caption_2_z }}", "align" : "{{ block.settings.caption_2_align }}", "entranceEffect": "{{ block.settings.entrance_effect }}", "exitEffect": "{{ block.settings.exit_effect }}"}'/>
                </div>
              {%- endif -%}
              {%- if block.settings.caption_3 != blank -%}
                <div class="index-slideshow-caption index-slideshow-caption-image">
                  <img src="{{ block.settings.caption_3 | img_url: 'master' }}" alt="{{ block.settings.caption_3.alt }}" class="animated" data-slideshow-caption='{"type": "image", "positionX": "{{ block.settings.caption_3_x }}", "positionY": "{{ block.settings.caption_3_y }}", "zIndex": "{{ block.settings.caption_3_z }}", "align" : "{{ block.settings.caption_3_align }}", "entranceEffect": "{{ block.settings.entrance_effect }}", "exitEffect": "{{ block.settings.exit_effect }}"}'/>
