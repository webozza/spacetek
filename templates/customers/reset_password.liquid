<div class="grid-container">
  <div class="account-reset-form">
    {%- form 'reset_customer_password' -%}
      <h1 class="text-center">{{ 'customer.reset_password.title' | t }}</h1>
      <p class="text-center">{{ 'customer.reset_password.subtext' | t: email: email }}</p>
      {{ form.errors | default_errors }}
      <input type="password" value="" name="customer[password]" placeholder="{{ 'customer.reset_password.password' | t }}" class="account-field {% if form.errors contains 'password' %} input-error{% endif %}">
      <input type="password" value="" name="customer[password_confirmation]" placeholder="{{ 'customer.reset_password.password_confirm' | t }}" class="account-field {% if form.errors contains 'password_confirmation' %} input-error{% endif %}">
      <button type="submit" class=" button primary radius width-100">{{ 'customer.reset_password.submit' | t }}</button>
    {%- endform -%}
  </div>
</div>