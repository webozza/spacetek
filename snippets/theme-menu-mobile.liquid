      <div class="flex-container align-center-middle flex-dir-column text-center">
        {%- if section.settings.email != blank -%}
          <div>
            <a href="mailto:{{ section.settings.email | downcase }}" class="button border-none rounded mobile-menu-contact-button flex-container align-middle">
              <em class="sli sli-envelope"></em>
              {{ section.settings.email }}
            </a>
          </div>
        {%- endif -%}
        {%- if section.settings.phone != blank -%}
          <div>
            <a href="tel:{{ section.settings.phone | remove: ' ' | remove: '.' | remove: '-' | remove: '(' | remove: ')' }}" class="button border-none rounded mobile-menu-contact-button margin-bottom-0 flex-container align-middle">
              <em class="sli sli-phone"></em>
              {{ 'general.text.call' | t }}: {{ section.settings.phone }}
            </a>
          </div>
        {%- endif -%}
      </div>
    </div>
  {%- endif -%}
</div>
<div id="mobile-menu-wrap" class="layout-mobile-overlap reveal full" data-reveal data-overlap-mobile data-v-offset="0" data-h-offset="0" data-overlay="false" data-animation-in="fade-in fast" data-animation-out="fade-out fast" data-enable-padding="true">
