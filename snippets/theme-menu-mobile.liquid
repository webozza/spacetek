                  <svg class="svg-icon">
                    <use xlink:href="#icon-twitter" />
                  </svg>
                </a>
              </div>
            {%- endif -%}
            {%- if settings.social_facebook_link != blank -%}
              <div class="cell shrink">
                <a href="{{ settings.social_facebook_link }}" target="_blank" class="mobile-menu-society-link display-block bordered rounded">
                  <svg class="svg-icon">
                    <use xlink:href="#icon-facebook" />
                  </svg>
                </a>
              </div>
            {%- endif -%}
            {%- if settings.social_pinterest_link != blank -%}
              <div class="cell shrink">
                <a href="{{ settings.social_pinterest_link }}" target="_blank" class="mobile-menu-society-link display-block bordered rounded">
                  <svg class="svg-icon">
                    <use xlink:href="#icon-pinterest" />
                  </svg>
                </a>
              </div>
            {%- endif -%}
            {%- if settings.social_instagram_link != blank -%}
              <div class="cell shrink">
                <a href="{{ settings.social_instagram_link }}" target="_blank" class="mobile-menu-society-link display-block bordered rounded">
                  <svg class="svg-icon">
                    <use xlink:href="#icon-instagram" />
                  </svg>
                </a>
              </div>
            {%- endif -%}
            {%- if settings.social_tumblr_link != blank -%}
              <div class="cell shrink">
                <a href="{{ settings.social_tumblr_link }}" target="_blank" class="mobile-menu-society-link display-block bordered rounded">
                  <svg class="svg-icon">
                    <use xlink:href="#icon-tumblr" />
                  </svg>
                </a>
              </div>
            {%- endif -%}
            {%- if settings.social_snapchat_link != blank -%}
              <div class="cell shrink">
                <a href="{{ settings.social_snapchat_link }}" target="_blank" class="mobile-menu-society-link display-block bordered rounded">
                  <svg class="svg-icon">
                    <use xlink:href="#icon-snapchat" />
                  </svg>
                </a>
              </div>
            {%- endif -%}
            {%- if settings.social_youtube_link != blank -%}
              <div class="cell shrink">
                <a href="{{ settings.social_youtube_link }}" target="_blank" class="mobile-menu-society-link display-block bordered rounded">
                  <svg class="svg-icon">
                    <use xlink:href="#icon-youtube" />
                  </svg>
                </a>
              </div>
            {%- endif -%}
            {%- if settings.social_vimeo_link != blank -%}
              <div class="cell shrink">
                <a href="{{ settings.social_vimeo_link }}" target="_blank" class="mobile-menu-society-link display-block bordered rounded">
                  <svg class="svg-icon">
                    <use xlink:href="#icon-vimeo" />
                  </svg>
                </a>
              </div>
            {%- endif -%}
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>
{%- if shop.customer_accounts_enabled -%}
  <div id="mobile-menu-login" class="layout-mobile-overlap reveal full" data-reveal data-overlap-mobile data-v-offset="0" data-h-offset="0" data-overlay="false" data-animation-in="fade-in fast" data-animation-out="fade-out fast" data-enable-padding="true">
    {%- assign map_to = 'mobile-menu-login' -%}
    {%- capture mobile_header_left -%}
      <a class="header-button-back display-inline-block" data-close="mobile-menu-login">
        <svg class="svg-icon">
          <use xlink:href="#icon-arrow-left" />
        </svg>
      </a>
    {%- endcapture -%}
    {%- capture mobile_header_content -%}
      <h3 class="header-title">{{ 'customer.account.title' | t }}</h3>
    {%- endcapture -%}
    {%- capture mobile_header_right -%}
      <a class="header-icon-search display-inline-block" data-toggle="search-box"><em class="sli sli-magnifier"></em></a>
      <div class="mini-cart display-inline-block">
        <a class="mini-cart-text display-block" data-toggle="mini-cart-info">
          <em class="mini-cart-icon sli sli-handbag">
            <span class="mini-cart-total" data-cart-total>{{ cart.item_count }}</span>
          </em>
        </a>
      </div>
    {%- endcapture -%}
    {%- include 'header-mobile-overlap' -%}
    <div class="account-login">
      {%- form 'customer_login' -%}
        <div class="account-login-heading text-center">
          <h2 class="account-login-title">{{ 'customer.login.title' | t }}</h2>
          <div class="account-login-subtitle">{{ 'customer.login.subtitle' | t: shop_name: shop.name }}</div>
        </div>
        {%- if form.errors -%}
          <div class="callout alert">
            {{ form.errors | default_errors }}
          </div>
        {%- endif -%}
        <input type="email" name="customer[email]" class="account-field {% if form.errors contains 'email' %} input-error{% endif %}" placeholder="{{ 'customer.login.email' | t }}" autocapitalize="off" autocomplete="email">
        {%- if form.password_needed -%}
          <input type="password" value="" name="customer[password]" class="account-field {% if form.errors contains 'password' %}  input-error{% endif %}" placeholder="{{ 'customer.login.password' | t }}" autocomplete="current-password"/>
        {%- endif -%}
        {%- if form.password_needed -%}
          <div class="flex-container align-right">
            <a data-toggle="mobile-menu-recover" class="account-login-recover">{{ 'customer.login.forgot_password' | t }}</a>
          </div>
        {%- endif -%}
        <button type="submit" class="button primary radius account-login-submit">{{ 'customer.login.sign_in' | t }}</button>
        <div class="text-center margin-bottom-1">
          <div>{{ 'layout.customer.create_account_title' | t }}</div>
          <a class="account-login-register" data-toggle="mobile-menu-register">{{ 'layout.customer.create_account' | t }}</a>
        </div>
      {%- endform -%}
    </div>
  </div>
  <div id="mobile-menu-register" class="layout-mobile-overlap reveal full" data-reveal data-overlap-mobile data-v-offset="0" data-h-offset="0" data-overlay="false" data-animation-in="fade-in fast" data-animation-out="fade-out fast" data-enable-padding="true">
    {%- assign map_to = 'mobile-menu-register' -%}
    {%- capture mobile_header_left -%}
      <a class="header-button-back display-inline-block" data-close="mobile-menu-register">
        <svg class="svg-icon">
          <use xlink:href="#icon-arrow-left" />
        </svg>
      </a>
    {%- endcapture -%}
    {%- capture mobile_header_content -%}
      <h3 class="header-title">{{ 'customer.account.title' | t }}</h3>
    {%- endcapture -%}
    {%- capture mobile_header_right -%}
      <a class="header-icon-search display-inline-block" data-toggle="search-box"><em class="sli sli-magnifier"></em></a>
      <div class="mini-cart display-inline-block">
        <a class="mini-cart-text display-block" data-toggle="mini-cart-info">
          <em class="mini-cart-icon sli sli-handbag">
            <span class="mini-cart-total" data-cart-total>{{ cart.item_count }}</span>
          </em>
        </a>
      </div>
    {%- endcapture -%}
    {%- include 'header-mobile-overlap' -%}
    <div class="account-register">
      {%- form 'create_customer' -%}
        <div class="account-register-heading text-center">
          <h2 class="account-register-title">{{ 'customer.register.title' | t }}</h2>
          <div class="account-register-subtitle">{{ 'customer.register.subtitle' | t }}</div>
        </div>
        {%- if form.errors -%}
          <div class="callout alert">
            {{ form.errors | default_errors }}
          </div>
        {%- endif -%}
        <input type="text" name="customer[first_name]" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} class="account-field" placeholder="{{ 'customer.register.first_name' | t }}" autocomplete="given-name"/>
        <input type="text" name="customer[last_name]" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} class="account-field" placeholder="{{ 'customer.register.last_name' | t }}" autocomplete="family-name"/>
        <input type="email" name="customer[email]" class="account-field {% if form.errors contains 'email' %} input-error{% endif %}" {% if form.email %} value="{{ form.email }}"{% endif %} placeholder="{{ 'customer.register.email' | t }}" autocapitalize="off" autocomplete="email">
        <input type="password" name="customer[password]" class="account-field {% if form.errors contains 'password' %} input--error{% endif %}" placeholder="{{ 'customer.register.password' | t }}" autocomplete="current-password"/>
        <button type="submit" class="account-register-submit button primary radius">{{ 'customer.register.submit' | t }}</button>
      {%- endform -%}
    </div>
  </div>
  <div id="mobile-menu-recover" class="layout-mobile-overlap reveal full" data-reveal data-overlap-mobile data-v-offset="0" data-h-offset="0" data-overlay="false" data-animation-in="fade-in fast" data-animation-out="fade-out fast" data-enable-padding="true">
    {%- assign map_to = 'mobile-menu-recover' -%}
    {%- capture mobile_header_left -%}
      <a class="header-button-back display-inline-block" data-close="mobile-menu-recover">
        <svg class="svg-icon">
          <use xlink:href="#icon-arrow-left" />
        </svg>
      </a>
    {%- endcapture -%}
    {%- capture mobile_header_content -%}
      <h3 class="header-title">{{ 'customer.account.title' | t }}</h3>
    {%- endcapture -%}
    {%- capture mobile_header_right -%}
      <a class="header-icon-search display-inline-block" data-toggle="search-box"><em class="sli sli-magnifier"></em></a>
      <div class="mini-cart display-inline-block">
        <a class="mini-cart-text display-block" data-toggle="mini-cart-info">
          <em class="mini-cart-icon sli sli-handbag">
            <span class="mini-cart-total" data-cart-total>{{ cart.item_count }}</span>
          </em>
        </a>
      </div>
    {%- endcapture -%}
    {%- include 'header-mobile-overlap' -%}
    <div class="account-recover">
      <h2 class="account-recover-title text-center">{{ 'customer.recover_password.title' | t }}</h2>
      <div class="account-recover-subtitle text-center">{{ 'customer.recover_password.subtext' | t }}</div>
      {%- form 'recover_customer_password' -%}
        <input type="email" value="" name="email" class="account-field" placeholder="{{ 'customer.recover_password.email' | t }}" autocapitalize="off" autocomplete="email"/>
        <button type="submit" class="account-recover-submit button primary radius">{{ 'customer.recover_password.submit' | t }}</button>
      {%- endform -%}
    </div>
  </div>
  {%- if customer  -%}
    <div id="mobile-menu-logged" class="layout-mobile-overlap reveal full" data-reveal data-overlap-mobile data-v-offset="0" data-h-offset="0" data-overlay="false" data-animation-in="fade-in fast" data-animation-out="fade-out fast" data-enable-padding="true">
      {%- assign map_to = 'mobile-menu-logged' -%}
      {%- capture mobile_header_left -%}
        <a class="header-button-back display-inline-block" data-close="mobile-menu-logged">
          <svg class="svg-icon">
            <use xlink:href="#icon-arrow-left" />
          </svg>
        </a>
      {%- endcapture -%}
      {%- capture mobile_header_content -%}
        <h3 class="header-title margin-0">{{ 'customer.account.title' | t }}</h3>
      {%- endcapture -%}
      {%- capture mobile_header_content -%}
        <h3 class="header-title">{{ 'customer.account.title' | t }}</h3>
      {%- endcapture -%}
      {%- capture mobile_header_right -%}
        <a class="header-icon-search display-inline-block" data-toggle="search-box"><em class="sli sli-magnifier"></em></a>
        <div class="mini-cart display-inline-block">
          <a class="mini-cart-text display-block" data-toggle="mini-cart-info">
            <em class="mini-cart-icon sli sli-handbag">
              <span class="mini-cart-total" data-cart-total>{{ cart.item_count }}</span>
            </em>
          </a>
        </div>
      {%- endcapture -%}
      {%- include 'header-mobile-overlap' -%}
      <div class="flex-container align-center-middle overflow-y-scroll overflow-x-hidden height-100">
        <div class="margin-auto width-100">
          <div class="account-logged">
            <h2 class="account-logged-title text-center">{{ 'customer.account.welcome' | t }} {{ customer.first_name }} {{ customer.last_name }}</h2>
            <ul class="account-logged-category no-bullet text-center margin-0">
              <li><a href="/account" class="account-logged-link">{{ 'customer.orders.title' | t }}</a></li>
              <li><a href="/account/addresses" class="account-logged-link">{{ 'customer.addresses.title' | t }}</a></li>
              <li><a href="/pages/wish-list" class="account-logged-link">{{ 'general.button.wishlist' | t }}</a></li>
              <li><a href="/account/logout" class="account-logged-link">{{ 'layout.customer.log_out' | t }}</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  {%- endif -%}
{%- endif -%}