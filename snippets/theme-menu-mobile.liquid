          {%- if customer  -%}
            <a class="mobile-nav-link display-block" data-toggle="mobile-menu-logged">
              <span class="mobile-nav-icon display-block"><em class="sli sli-user"></em></span>
              <span class="mobile-nav-text display-block">{{ 'general.text.account' | t }}</span>
            </a>
          {%- else -%}
            <a class="mobile-nav-link display-block" data-toggle="mobile-menu-login">
              <span class="mobile-nav-icon display-block"><em class="sli sli-user"></em></span>
              <span class="mobile-nav-text display-block">{{ 'general.text.account' | t }}</span>
            </a>
          {%- endif -%}
        </div>
      {%- endif -%}
      <div class="cell auto text-center">
        <a class="mobile-nav-link display-block" data-toggle="mobile-menu-contact-dropup">
          <span class="mobile-nav-icon display-block"><em class="sli sli-location-pin"></em></span>
          <span class="mobile-nav-text display-block">{{ 'general.text.contact' | t }}</span>
        </a>
      </div>
      <div class="cell auto text-center">
        <a class="mobile-nav-link display-block" data-toggle="mobile-menu-wrap">
          <span class="mobile-nav-icon display-block"><em class="sli sli-options"></em></span>
          <span class="mobile-nav-text display-block">{{ 'general.text.more' | t }}</span>
        </a>
      </div>
    </div>
  </div>
  {%- if section.settings.email != blank or section.settings.phone != blank -%}
